<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Model3DActivity"
    android:orientation="vertical">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_show_3d"
            android:text="展现3D"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_remove_mask"
            android:text="清除遮罩"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btn_show_3d"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_change_texure"
            android:text="切换标注纹理"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_change_bottom_texure"
            android:text="切换下层纹理"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/reset"
            android:text="重置"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <com.wardtn.modellibrary.Native3DLayout
        android:id="@+id/native3dLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.wardtn.modellibrary.Native3DLayout>

    <!--        <com.wardtn.modellibrary.compare.NativeCompare3DLayout-->
    <!--            android:id="@+id/nativeCompare"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_marginBottom="50dp"-->
    <!--            android:layout_height="match_parent">-->
    <!--        </com.wardtn.modellibrary.compare.NativeCompare3DLayout>-->


</LinearLayout>